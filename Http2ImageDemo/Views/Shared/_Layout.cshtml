<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HTTP/2 Demo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HTTP/2 Demo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-container">
        <h3>Select a Demo</h3>
        <ul class="menu">
            <li>
                <img src="@Url.Content("~/Images/bridge_th.png")" />
                <a class="btn btn-sm btn-primary" href='@Url.Action("Index", "Home", new { image = "bridge" }, "http")'>HTTP/1.1</a>
                <a class="btn btn-sm btn-primary" href='@Url.Action("Index", "Home", new { image = "bridge" }, "https")'>HTTP/2</a>
            </li>
            <li>
                <img src="@Url.Content("~/Images/vw_th.png")" />
                <a class="btn btn-sm btn-primary" href='@Url.Action("Index", "Home", new { image = "vw" }, "http")'>HTTP/1.1</a>
                <a class="btn btn-sm btn-primary" href='@Url.Action("Index", "Home", new { image = "vw" }, "https")'>HTTP/2</a>
            </li>
            <li>
                <img src="@Url.Content("~/Images/birds_th.png")" />
                <a class="btn btn-sm btn-primary" href='@Url.Action("Index", "Home", new { image = "birds" }, "http")'>HTTP/1.1</a>
                <a class="btn btn-sm btn-primary" href='@Url.Action("Index", "Home", new { image = "birds" }, "https")'>HTTP/2</a>
            </li>
        </ul>
        <div class="body-content">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - HTTP2 Demo - <a href="http://github.com/bendewey/http2imagedemo">http://github.com/bendewey/Http2ImageDemo</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
